# Search API
SERPAPI_API_KEY=your_serpapi_key_here

# Web Scraping (Optional - use ScrapingBee to bypass anti-bot protection)
# Get your API key from https://www.scrapingbee.com/
USE_SCRAPINGBEE=false
SCRAPINGBEE_API_KEY=your_scrapingbee_key_here

# LLM Providers
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Caching (saves API credits and ScrapingBee requests)
ENABLE_SERP_CACHE=true
SERP_CACHE_TTL_HOURS=24
ENABLE_SCRAPE_CACHE=true
SCRAPE_CACHE_TTL_HOURS=24

# Cache Backend (choose one)
# For local development: Use file cache (default)
CACHE_DIR=.cache

# For production: Use Redis cache (automatically enabled if REDIS_URL is set)
# Get Redis URL from: Upstash, Redis Cloud, Vercel KV, AWS ElastiCache, etc.
# USE_REDIS_CACHE=true
# REDIS_URL=redis://username:password@host:port

# App Settings
NEXT_PUBLIC_DEFAULT_MODEL=claude-sonnet-4-5
RATE_LIMIT_DELAY_MS=1000
MAX_CONCURRENT_REQUESTS=3

# Optional: Set to 'development' or 'production'
NODE_ENV=development
